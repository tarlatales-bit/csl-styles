<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text" default-locale="en-US" demote-non-dropping-particle="never">
  <info>
    <title>APA 7th edition (RMUTR custom – forced pages)</title>
    <title-short>APA7-RMUTR</title-short>
    <id>http://example.org/styles/apa-7th-rmutr</id>
    <link href="http://example.org/styles/apa-7th-rmutr" rel="self"/>
    <link href="http://www.zotero.org/styles/apa" rel="template"/>
    <author>
      <name>GPT-5 Thinking (for Tarla/RMUTR)</name>
    </author>
    <category citation-format="author-date"/>
    <category field="social_science"/>
    <summary>APA 7th variant that forces page numbers in all in-text citations; uses Thai 'หน้า' when locale=th.</summary>
    <updated>2025-09-20T00:00:00+07:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This style is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>

  <!-- Locale override for Thai page label -->
  <locale xml:lang="th">
    <terms>
      <term name="page" form="short">หน้า</term>
      <term name="page-range-delimiter">–</term>
    </terms>
  </locale>

  <!-- BEGIN: Macros (simplified APA7-like) -->
  <macro name="author">
    <names variable="author">
      <name and="symbol" delimiter=", " delimiter-precedes-last="always" initialize-with="." name-as-sort-order="all"/>
      <label form="short" prefix=" " strip-periods="true"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title"/>
        <text macro="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <choose>
      <if type="article-journal article-magazine article-newspaper chapter paper-conference report webpage" match="any">
        <text variable="title" quotes="false"/>
      </if>
      <else>
        <text variable="title" font-style="italic"/>
      </else>
    </choose>
  </macro>

  <macro name="container">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <group delimiter=", ">
          <text variable="container-title" font-style="italic"/>
          <group delimiter="">
            <text variable="volume" font-style="italic"/>
            <text variable="issue" prefix="(" suffix=")"/>
          </group>
          <text variable="page" prefix=" " />
        </group>
      </if>
      <elseif type="chapter paper-conference" match="any">
        <group delimiter=", ">
          <group delimiter=" ">
            <text term="in"/>
            <names variable="editor">
              <name and="symbol" initialize-with="." delimiter=", "/>
              <label form="short" prefix=" (" suffix=")"/>
            </names>
          </group>
          <text variable="container-title" font-style="italic"/>
          <text variable="page" prefix="pp. "/>
          <text variable="publisher"/>
        </group>
      </elseif>
      <else>
        <group delimiter=", ">
          <text variable="publisher"/>
          <text variable="publisher-place"/>
        </group>
      </else>
    </choose>
  </macro>

  <macro name="locators">
    <choose>
      <if variable="DOI">
        <text variable="DOI" prefix="https://doi.org/"/>
      </if>
      <elseif variable="URL">
        <text variable="URL"/>
      </elseif>
    </choose>
  </macro>
  <!-- END: Macros -->

  <!-- In-text citation with mandatory page label and number/range -->
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" disambiguate-add-names="true">
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <group delimiter=", ">
          <names variable="author">
            <name form="short" and="symbol" initialize-with="."/>
            <substitute>
              <names variable="editor"/>
              <text variable="title"/>
            </substitute>
          </names>
          <date variable="issued">
            <date-part name="year"/>
          </date>
        </group>
        <group>
          <label variable="page" form="short" prefix="" suffix=" "/>
          <text variable="locator"/>
          <text variable="page"/>
        </group>
      </group>
    </layout>
  </citation>

  <!-- Reference list (APA-like; simplified but valid) -->
  <bibliography et-al-min="21" et-al-use-first="19" hanging-indent="true" line-spacing="2" entry-spacing="0">
    <sort>
      <key macro="author"/>
      <key macro="issued"/>
      <key variable="title"/>
    </sort>
    <layout>
      <group delimiter=". ">
        <group>
          <text macro="author"/>
          <text macro="issued" prefix=" (" suffix=")."/>
        </group>
        <text macro="title"/>
        <text macro="container"/>
        <text macro="locators"/>
      </group>
    </layout>
  </bibliography>
</style>
